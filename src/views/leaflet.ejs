<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap" rel="stylesheet">
    <title>Geolocalizacion con leaflet</title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"
      integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
      crossorigin=""
    />
    <script
      src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"
      integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew=="
      crossorigin=""
    ></script>
  </head>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Nunito&display=swap');
    body {
      margin: 0;
      padding: 0;
     
    }
    p{
      font-family: 'Nunito', sans-serif;
    }
    #map {
      height: 100vh;
      width: 100%;
    }
  </style>

  <body>
    <div id="map"></div>
    <script>

      //inicializando el mapa con ubicacion en Buenos Aires
      let marker;
      let mymap = L.map("map").setView([-34.6083, -58.3712], 12);

      //openstreetmap
      L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
        attribution:
          '&copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors',
      }).addTo(mymap);

      //request json del backend y filtrado
      const url = "http://localhost:3000/hospitales";
      fetch(url)
        .then((response) => response.json())
        .then((data) =>
          data.forEach((hospital) => {
            marker = L.marker([
              hospital.position.lat,
              hospital.position.lng,
            ]).addTo(mymap);
            marker.bindPopup(`<p><b>üëãüèºWelcome to</b><br><span>${hospital.position.name}</span>.</p>`).openPopup();

            //popup de coordenadas
            let popup = L.popup()
            function onMapClick(e) {
              popup
                .setLatLng(e.latlng)
                .setContent("üìçYou clicked the map at " + e.latlng.toString())
                .openOn(mymap);
            }
            mymap.on("click", onMapClick);
          })
        )
        .catch((err) => console.log(err));
    </script>
  </body>
</html>
